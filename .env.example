# Telegram
BOT_TOKEN=

# App
CONCURRENCY=4
REQUEST_TIMEOUT_MS=8000
USER_AGENT=WpInfoBot/0.4

# Rate limit (per-user)
RATE_LIMIT_WINDOW_SEC=60
RATE_LIMIT_MAX=10
RATE_LIMIT_PENALTY_SEC=30

# SQLite
DB_PATH=./data/wpinfo.db

# Caching
CACHE_TTL_SEC=600
CACHE_MAX_ENTRIES=500

# Reports
MAX_PLUGINS_IN_REPORT=30

# Passive version hints (extra requests)
ENABLE_VERSION_HINTS=true
MAX_VERSION_HINT_PROBES_PER_SITE=15

# Wordfence vulnerability feed sync (requires API key)
# Create an API key in Wordfence.com account -> Integrations
WORDFENCE_API_KEY=
WORDFENCE_FEED_TYPE=production  # production | scanner
WORDFENCE_SYNC_INTERVAL_MIN=360  # default 6h

# Safer sync controls (recommended)
# - Use periodic sync only (users never hit the API directly)
# - Lock prevents multiple instances from syncing simultaneously
# - Backoff activates automatically after HTTP 429 (rate limit)
WORDFENCE_SYNC_ON_START=true
WORDFENCE_SYNC_LOCK_TTL_SEC=900
WORDFENCE_SYNC_BACKOFF_MIN=720

# Watch/notifications
ENABLE_WATCH_NOTIFICATIONS=true
WATCH_CHECK_INTERVAL_MIN=360
WATCH_RECENT_DAYS=30

# Admin (optional)
# comma-separated Telegram user IDs
ADMIN_USER_IDS=51072330

# Pluginyab Scraper API (external service)
# This service should be running separately on the specified URL
PLUGINYAB_API_URL=http://localhost:3001
